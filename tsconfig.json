{
    "extends": "@tsconfig/strictest/tsconfig",
    "compilerOptions": {
        "outDir": "out",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "verbatimModuleSyntax": true,
        "allowArbitraryExtensions": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "incremental": true,
        "skipLibCheck": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*",
    ]
}